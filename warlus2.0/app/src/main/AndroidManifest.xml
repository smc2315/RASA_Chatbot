<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.techtown.chatbot1">

    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.warlus"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".NoticeActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".NewsActivity" />
        <activity android:name=".ChartFac" />
        <activity android:name=".ChartInout" />
        <activity
            android:name=".Chatbot"
            android:label="@string/title_activity_chatbot"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".FreightFee" />
        <activity android:name=".ShippingFee" />
        <activity android:name=".OverdueFee" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SettingActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>